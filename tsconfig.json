{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
	"target": "es2021",   
    "lib": [
      "ESNext",
      "dom"
    ],
	"files": [
		"dist/*",
		"examples/*",
		"lib/*"
	  ],
    "declaration": true,
    "sourceMap": true,
    "removeComments": false,
    "outDir": "./dist/",
    "resolveJsonModule": true,
    "skipLibCheck": true,
	"types": [
		"node"
	  ], 
  },
  "include": [
	"lib/*.ts",
    "lib/**/*.ts"
  ],
  "exclude": [
    "node_modules",
	"./examples/example.ts"
  ]
}