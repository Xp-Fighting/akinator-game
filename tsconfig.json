{
  "compilerOptions": {
    "strict": false,
    "module": "commonjs",
    "moduleResolution": "node",
	"target": "es2021",   
    "lib": [
      "ESNext",
	  "es2021",
      "DOM",
	  "esnext.array"
    ],
    "declaration": true,
    "sourceMap": true,
    "removeComments": false,
    "outDir": "dist",
    "resolveJsonModule": true,
	"noImplicitThis": true,
	"esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
	"allowJs": false,
    "checkJs": false
  },
  "include": [
	"lib/*.ts",
    "lib/**/*.ts"
  ],
  "exclude": [
    "node_modules",
	"./examples/example.ts"
  ]
}